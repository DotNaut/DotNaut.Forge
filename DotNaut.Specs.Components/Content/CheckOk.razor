    <FluentIcon Value="@(new Icons.Filled.Size16.CheckmarkCircle())" Color=@Color.Success />
    <FluentLabel>@ChildContent</FluentLabel>
</FluentStack>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
